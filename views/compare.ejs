<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container">
    <h1>Compare</h1>
    <form action="/compare" method="post">
        <div class="form-group">
            <label for="capture1">Capture 1</label>
            <select name="capture1" id="capture1" class="form-control">
                <% captures.forEach(function(capture) { %>
                    <option value="<%= capture._id %>"><%= capture.details.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="capture2">Capture 2</label>
            <select name="capture2" id="capture2" class="form-control">
                <% captures.forEach(function(capture) { %>
                    <option value="<%= capture._id %>"><%= capture.details.name %></option>
                <% }) %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Compare</button>
    </form>

    <% if (comparisonResult) { %>
        <h2>Comparison Result</h2>
        <pre><%= JSON.stringify(comparisonResult, null, 2) %></pre>
    <% } %>
</div>

<%- include('partials/footer') %>